<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amazing - Order List</title>
</head>
<body>
    <%- include("../partials/navbar-admin") %>
    <!-- order list item yang sudah di beli -->
    <h1>All Order List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>No.</th>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Customer Name</th>
                <th>Customer Adress</th>
                <th>Customer Phone Number</th>
                <th>Buyed Stock</th>
                <th>Order Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% listOrders.forEach((el, idx) => { %>
                <tr>
                    <td><%= idx + 1 %></td>
                    <td><img src="<%= el.Product.imageUrl %>" width="80px" height="100px"></td>
                    <td><%= el.Product.name %></td>
                    <td><%= el.UserProfile.name %></td>
                    <td><%= el.UserProfile.address %></td>
                    <td><%= el.UserProfile.phoneNumber %></td>
                    <td><%= el.buyStock %></td>
                    <td><%= el.formattedOrderStatus %></td>
                    <td>
                        <% if (el.orderStatus) { %>
                            <a href="/admin/orderlist/unfinishorder/<%= el.id %>"><button>Unfinish Order</button></a>
                        <% } else { %>
                            <a href="/admin/orderlist/finishorder/<%= el.id %>"><button>Finish Order</button></a>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>