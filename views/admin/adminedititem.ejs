<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <title>Amazing - Admin - Edit Product</title>
</head>
<body>
    <%- include("../partials/navbar-admin") %>
    <% if (error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>
    <h1>Edit Product</h1>
    <form action="/admin/edit/<%= productById.id %>" method="post">
        <p>
            Product Name
            <input type="text" name="name" value="<%= productById.name %>">
        </p>

        <p>
            Short Description
            <input type="text" name="description" value="<%= productById.description %>">
        </p>

        <p>
            Price (Minimum 15000)
            <input type="text" name="price" value="<%= productById.price %>">
        </p>

        <p>
            Stock
            <input type="text" name="stock" value="<%= productById.stock %>">
        </p>

        <p>
            Image URL
            <input type="text" name="imageUrl" value="<%= productById.imageUrl %>">
        </p>

        <p>
            Category
            <select name="CategoryId">
                <option disabled>-- Category --</option>
                <% listCategories.forEach(el => { %>
                    <% if (el.id === productById.CategoryId) { %>
                        <option value="<%= el.id %>" selected><%= el.name %></option>
                    <% } else { %>
                        <option value="<%= el.id %>"><%= el.name %></option>
                    <% } %>
                <% }) %>
            </select>
        </p>

        <button type="submit">Update Product</button>
    </form>
</body>
</html>